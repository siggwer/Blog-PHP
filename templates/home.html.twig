{% extends 'layout.html.twig' %}

{% block title %}<title>Accueil</title>{% endblock %}

{% block content %}
<!-- Main Content -->
    {% for article in articles %}
    <!--Content index Page-->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-preview">
                    <a href="/article_details/{{ article.id }}" target="_blank">
                        <h2 class="post-title">
                            {{ article.title }}
                        </h2>
                        <h3 class="post-subtitle">
                            {{ article.chapo }}
                        </h3>
                    </a>
                    <p class="post-meta">Post√© par

                        <a>{{ article.pseudo }}</a>
                        le {{ article.creation_date_fr }}</p>
                </div>
            </div>
        </div>
    <div class="col-lg-8 col-md-10 mx-auto clearfix">
        <a class="btn btn-primary float-left" href="/article_details/{{ article.id }}" target="_blank">Lire l'article</a>
    </div>
    </div>

    <hr>
    {% endfor %}
{% endblock %}
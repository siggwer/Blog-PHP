{% extends 'layoutAdministration.html.twig' %}

{% block title %}<title>Ajouter un article</title>{% endblock %}

{% block content %}

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-md-10 mx-auto">
                {% if posts.pseudo is defined %}
                    <form name="create" class="form" role="form" action="/create" method="post">
                        <input type="hidden" name="__csrf" id="__csrf" value="{{ __csrf }}" />
                        <div class="form-group">
                            <label id="author" for="author">Ajouter un nouvel article {{ posts.pseudo }}</label>
                            <span class="help-inline"></span>
                        </div>
                        <div class="form-group">
                            <label for="title">Titre : *</label>
                            <input type="text" class="form-control" id="title" name="title" placeholder="Ajouter un titre." required data-validation-required-message="Entrer un titre.">
                            <span class="help-inline"></span>
                        </div>
                        <div class="form-group">
                            <label for="chapo">Chap√¥ : *</label>
                            <input type="text" class="form-control" id="chapo" name="chapo" placeholder="Ajouter un chapo." rows="5" required data-validation-required-message="Entrer un chapo.">
                            <span class="help-inline"></span>
                        </div>
                        <div class="form-group">
                            <label for="content">Contenu : *</label>
                            <textarea class="form-control" id="editor" name="content" rows="15" required data-validation-required-message="Ajouter un contenu"></textarea>
                            <span class="help-inline"></span>
                        </div>
                        <p>* : Champs obligatoires</p>
                        <br>
                        <div class="form-actions">
                            <button type="submit" class="btn btn-success">Ajouter</button>
                            <a class="btn btn-primary" href="/account">Retour</a>
                        </div>
                    </form>
                {% endif %}
            </div>
        </div>
  </div>

{% endblock %}
{% extends 'layoutAdministration.html.twig' %}

{% block title %}<title>Modification de article</title>{% endblock %}

{% block content %}

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-md-10 mx-auto">
                <h2>Modifier l'article</h2>
                <br />
                {% if articles.title is defined and articles.chapo is defined and articles.content is defined and articles.creation_date_fr is defined %}
                    <form name="update" class="form" role="form" action="/update/{{ articles.id }}" method="post">
                    <input type="hidden" name="__csrf" id="__csrf" value="{{ __csrf }}" />
                    <div class="form-group">
                        <label for="title">Titre : *</label>
                        <input type="text" class="form-control" id="title" name="title" placeholder="{{ articles.title |nl2br }}" value="{{ articles.title |nl2br }}" required data-validation-required-message="Entrer un titre.">
                        <span class="help-inline"></span>
                    </div>
                    <div class="form-group">
                        <label for="chapo">Chap√¥ : *</label>
                        <input type="text" class="form-control" id="chapo" name="chapo" placeholder="{{ articles.chapo |nl2br }}" value="{{ articles.chapo |nl2br }}" rows="5" required data-validation-required-message="Entrer un chapo.">
                        <span class="help-inline"></span>
                    </div>
                    <div class="form-group">
                        <label for="content">Contenu : *</label>
                        <textarea class="form-control" id="editor" name="content" rows="15" data-validation-required-message="Entrez un contenu.">{{ articles.content|nl2br }}</textarea>
                        <span class="help-inline"></span>
                    </div>
                    <p>* : Champs obligatoires</p>
                    <br>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">Modifier</button>
                        <a class="btn btn-primary" href="/account">Retour</a>
                    </div>
                </form>
                {% endif %}
            </div>
        </div>
    </div>

    <hr />

{% endblock %}